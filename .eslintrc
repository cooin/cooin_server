{
  "parser"  : "babel-eslint",
  "extends": [
    // "eslint:recommended",
    // "plugin:import/errors",
    // "plugin:import/warnings"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "curly": 2,
    "quotes": 0,
    "indent": ["error", 2, {"SwitchCase": 1}],
    "no-console": 0,
    "no-debugger": 0,
    "semi": [1, "always"],
    "no-trailing-spaces": 0,
    "no-mixed-spaces-and-tabs": 2,
    "eol-last": 0,
    "no-unused-vars": 1,
    "no-use-before-define": 1,
    "no-underscore-dangle": 0,
    "no-alert": 0,
    "no-lone-blocks": 0,
    'no-redeclare': 2,
    'no-return-assign': 2,
    'no-undef': 2,
    'no-undef-init': 2,
    "no-unused-vars": [1, {
      "vars": "all",
      "args": "after-used"
    }],
    "space-unary-ops": 2
  }
}
